{% extends 'base.html.twig' %}

{% block title %}Hello StationDashboardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table, th, td {
        border: aliceblue 2px solid;
    }
</style>

<div class="example-wrapper">
    <h1>{{ station.name }}</h1>
    {% for status in station.status %}
        <table style="width: 100%;">
            <tr>
                <th>{{ status.date|date('d-m-Y') }}</th>
            </tr>
            <tbody>
            <tr>
                {% for key,value in status.inStation %}
                    <td>
                        <h3>{{ key }} </h3> in Station : <h3> {{ value }} </h3>
                    </td>
                {% endfor %}

                {% for key,value in status.inBooking %}
                    <td>
                        <h3>{{ key }} </h3> Booked: <h3> {{ value }} </h3>
                    </td>
                {% endfor %}

            </tr>
            </tbody>
        </table>
    {% endfor %}
</div>
{% endblock %}
